<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <ImageView
        android:contentDescription="@string/image_description"
        android:layout_alignParentStart="true"
        android:id="@+id/image_work_experience"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/ic_job_item"
        android:layout_marginEnd="10dip"/>

    <TextView
        android:id="@+id/job_title_work_experiences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_work_experience"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Empleado de mostrador" />

    <TextView
        android:id="@+id/experience_type_work_experiences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/job_title_work_experiences"
        android:layout_below="@+id/job_title_work_experiences"
        tools:text="Experiencia Laboral" />

    <TextView
        android:id="@+id/institute_work_experiences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/job_title_work_experiences"
        android:layout_below="@+id/experience_type_work_experiences"
        tools:text="Industrias AC" />

</RelativeLayout>