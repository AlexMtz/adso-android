<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <ImageView
        android:contentDescription="@string/image_description"
        android:layout_alignParentStart="true"
        android:id="@+id/image_data"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/ic_backpack"
        android:layout_marginEnd="10dip"/>

    <TextView
        android:id="@+id/title_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_data"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Generales" />

    <TextView
        android:id="@+id/brief_description_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title_data"
        android:layout_below="@+id/title_data"
        tools:text="Nombre, apellidos, edad y domicilio serÃ¡n necesarios." />

</RelativeLayout>